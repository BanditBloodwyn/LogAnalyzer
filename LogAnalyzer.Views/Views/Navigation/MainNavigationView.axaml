<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:navigation="clr-namespace:LogAnalyzer.ViewModels.Navigation;assembly=LogAnalyzer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="LogAnalyzer.Views.Views.Navigation.MainNavigationView"
             x:DataType="navigation:MainNavigationViewModel">
    
    <Border BorderThickness="0,0,2,0" BorderBrush="#303030">
        <Grid RowDefinitions="*, *">

            <ContentControl Grid.Row="0" Content="{Binding ModuleButtonsPanelVM}"/> 
            <ContentControl Grid.Row="1" Content="{Binding CommandsPanelVM}"/> 
        </Grid>
    </Border>
</UserControl>
