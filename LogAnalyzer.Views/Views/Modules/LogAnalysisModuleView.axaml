<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:modules="clr-namespace:LogAnalyzer.ViewModels.Modules;assembly=LogAnalyzer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LogAnalyzer.Views.Views.Modules.LogAnalysisModuleView"
             x:DataType="modules:LogAnalysisModuleViewModel">
    <Grid RowDefinitions="29,*">
        <StackPanel Orientation="Horizontal">
            <Button VerticalAlignment="Top" 
                    Height="30" Width="30"
                    Command="{Binding OpenNewLogPanelCommand}">+</Button>
        </StackPanel>

        <Border Grid.Row="1"
                BorderBrush="DimGray" BorderThickness="1">
            <ContentControl x:Name="cc_logsPanel">

            </ContentControl>
        </Border>
    </Grid>
</UserControl>
