<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:logAnalysis="clr-namespace:LogAnalyzer.ViewModels.Modules.LogAnalysis;assembly=LogAnalyzer.ViewModels"
             xmlns:logAnalysis1="clr-namespace:LogAnalyzer.ViewModels.Design.Modules.LogAnalysis;assembly=LogAnalyzer.ViewModels.Design"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:Class="LogAnalyzer.Views.Views.Modules.LogAnalysis.LogPanelView"
             x:DataType="logAnalysis:LogPanelViewModel">
	
    <Design.DataContext>
		<logAnalysis1:LogPanelDesignViewModel/>
    </Design.DataContext>

    <Border BorderBrush="Gray" BorderThickness="1">
        <StackPanel>
            <Border BorderBrush="#3e3e3e" BorderThickness="1">
                <Grid Height="30"
                      ColumnDefinitions="*, 30">
                    <TextBlock Grid.Column="0" 
                               VerticalAlignment="Bottom" HorizontalAlignment="Left"
                               Background="#3e3e3e"
                               Text="{Binding File.Name}"/>
                    <Button Grid.Column="1" Content="X"/>
                </Grid>
			</Border>
        </StackPanel>
    </Border>
</UserControl>
