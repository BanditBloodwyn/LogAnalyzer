<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:logAnalysis="clr-namespace:LogAnalyzer.ViewModels.Modules.LogAnalysis;assembly=LogAnalyzer.ViewModels"
             xmlns:logAnalysis1="clr-namespace:LogAnalyzer.Views.Views.Modules.LogAnalysis"
             xmlns:design="clr-namespace:LogAnalyzer.ViewModels.Design.Modules.LogAnalysis;assembly=LogAnalyzer.ViewModels.Design"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
             x:Class="LogAnalyzer.Views.Views.Modules.LogAnalysis.LogPanelView"
             x:DataType="logAnalysis:LogPanelViewModel">
    
    <Design.DataContext>
		<design:LogPanelDesignViewModel/>
	</Design.DataContext>

    <Border BorderBrush="Transparent" BorderThickness="2">
        <Grid RowDefinitions="Auto,Auto,*">
            <!--Header-->
            <Grid Grid.Row="0" Height="30"
                  ColumnDefinitions="*, 30">
                <Path Grid.Column="0"
                      Fill="#303030" Stroke="#303030" StrokeThickness="1">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,0">
                                <LineSegment Point="230,0"/>
                                <LineSegment Point="260,27"/>
                                <LineSegment Point="0,27"/>
                                <LineSegment Point="0,0"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                <Label Grid.Column="0"
                       HorizontalAlignment="Left"
                       VerticalContentAlignment="Center"
                       Margin="0,-5" Padding="10,0"
                       Content="{Binding File.Name}"/>
                <Button Grid.Column="1"
                        Command="{Binding CloseLogPanelCommand}"
                        Content="X"/>
			</Grid>

            <!--Progress-->
            <Grid Grid.Row="1" Background="#303030"
                  Height="30" ColumnDefinitions="100, *">
                <Label Grid.Column="0" VerticalAlignment="Center"
                       Content="{Binding AnalysisProgressPercents}"/>
            </Grid>

            <!--Content-->
            <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <Border Background="#202020" Margin="5">
                    <ItemsControl ItemsSource="{Binding LogEntries}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <logAnalysis1:LogEntryElement/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
